    "description": "A notifier microservice for OpenProcurement",
    "keywords": ["microservice"],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Arsenii Andrieiev",
            "email": "andreevart95@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "slim/slim": "^3.9"
    },
    "require-dev": {
